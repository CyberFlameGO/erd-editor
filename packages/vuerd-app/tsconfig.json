{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "sourceMap": true,
    "baseUrl": ".",
    "useDefineForClassFields": true,
    "paths": {
      "@/*": ["src/*"],
      "@@types/*": ["types/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": ["node_modules"]
}
